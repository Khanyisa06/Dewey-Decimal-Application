<Window x:Class="LibraryTrainer.Game1_Replace"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryTrainer"
        mc:Ignorable="d"
        Title="Replacing Books" Height="450" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="btnStart" HorizontalAlignment="Center" VerticalAlignment="Top" MinHeight="40" MinWidth="100" Margin="0,18,0,0" Click="btnStart_Click">Start</Button>
        <ListBox x:Name="lbxSystemList" Width="260" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10,2"/>
        <Button x:Name="btnEnd" HorizontalAlignment="Center" VerticalAlignment="Top" MinHeight="40" MinWidth="100" Margin="0,365,0,0" Click="btnEnd_Click" >End</Button>
        <Label x:Name="lblScore" Content="Your Score:" HorizontalAlignment="Center" Margin="0,334,0,0" VerticalAlignment="Top" Width="Auto"/>
        <Label x:Name="lblheader" Content="Arrange the Call Numbers in Ascending Order:" HorizontalAlignment="Left" Margin="270,76,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblHighScore" Content="High Score: 0" HorizontalAlignment="Left" Margin="596,22,0,0" VerticalAlignment="Top" FontSize="16" FontFamily="Ebrima"/>
    </Grid>
</Window>
