<Page x:Class="LibraryTrainer.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryTrainer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuItems"
      Height="450" Width="800">

    <Grid>
        <Button x:Name="btnGame1" FontWeight="Bold" Background="BlanchedAlmond" BorderThickness="3" BorderBrush="Black"  Content ="Replacing Books" Click="btnGame1_Click" Margin="0,132,315,0"  Width="170" MinHeight="40" Height="50" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
        <Button x:Name="btnGame2" FontWeight="Bold" Background="BlanchedAlmond" BorderThickness="3" BorderBrush="Black"  Content="Identifying Areas"   Height="50" Width="170" MinHeight="40" IsEnabled="True" Margin="0,225,315,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="btnGame2_Click" />
        <Button x:Name="btnGame3" FontWeight="Bold" Background="BlanchedAlmond" BorderThickness="3" BorderBrush="Black"  Margin="0,313,315,0" Content="Finding Call Numbers"  Height="50" Width="170" MinHeight="40"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="btnGame3_Click" />

    </Grid>
</Page>
